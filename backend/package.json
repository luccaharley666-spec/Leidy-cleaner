{
  "name": "limpezapro-backend",
  "version": "1.0.0",
  "description": "Backend Express para plataforma de limpeza",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:integrated": "INTEGRATE_NEXT=true node src/index.js",
    "dev": "nodemon src/index.js",
    "build:frontend": "cd ../frontend && npm ci --silent && npm run build",
    "start:prod": "npm run build:frontend && NODE_ENV=production INTEGRATE_NEXT=true node src/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "node src/db/runMigrations.js",
    "seed": "node src/db/seed.js",
    "db:init": "node scripts/initDb.js",
    "queue:worker": "node src/workers/emailQueueWorker.js",
    "queue:worker:watch": "nodemon src/workers/emailQueueWorker.js",
    "queue:retry-worker": "node src/workers/retryQueueWorker.js",
    "queue:clean": "node -e \"require('./src/services/EmailQueueService.js').cleanFailedJobs().then(() => process.exit(0))\"",
    "queue:stats": "node -e \"require('./src/services/EmailQueueService.js').getQueueStats().then(s => console.log(JSON.stringify(s, null, 2))).then(() => process.exit(0))\"",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@sentry/node": "^7.84.0",
    "axios": "^1.13.5",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^12.7.0",
    "googleapis": "^118.0.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.0",
    "multer": "^2.0.2",
    "next": "^16.1.6",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.13",
    "openai": "^6.17.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.8.0",
    "prom-client": "^15.0.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.5",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.7",
    "stripe": "^11.8.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.12.1",
    "web-push": "^3.5.0",
    "winston": "^3.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.29.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  }
}
