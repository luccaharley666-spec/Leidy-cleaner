{
  "name": "leidycleaner-backend",
  "version": "1.0.0",
  "description": "Backend Express para plataforma Leidy Cleaner",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:integrated": "INTEGRATE_NEXT=true node dist/main.js",
    "start:dev": "cross-env NODE_ENV=development tsx watch src/main.ts",
    "dev": "cross-env NODE_ENV=development tsx watch src/main.ts",
    "build:frontend": "cd ../frontend && npm ci --silent && npm run build",
    "start:prod": "npm run build && npm run build:frontend && NODE_ENV=production INTEGRATE_NEXT=true node dist/main.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:load": "node scripts/load-test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "tsx src/db/runMigrations.ts",
    "seed": "tsx src/db/seed.ts",
    "db:init": "node scripts/initDb.js",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "backup": "bash ../../backup.sh",
    "restore": "bash ../../restore.sh",
    "queue:worker": "node src/workers/emailQueueWorker.js",
    "queue:worker:watch": "nodemon src/workers/emailQueueWorker.js",
    "queue:retry-worker": "node src/workers/retryQueueWorker.js",
    "queue:clean": "node -e \"require('./src/services/EmailQueueService.js').cleanFailedJobs().then(() => process.exit(0))\"",
    "queue:stats": "node -e \"require('./src/services/EmailQueueService.js').getQueueStats().then(s => console.log(JSON.stringify(s, null, 2))).then(() => process.exit(0))\"",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "2fa:setup": "node -e \"const TwoFactorService = require('./backend/src/services/TwoFactorService.js'); console.log(JSON.stringify(TwoFactorService.generateTOTPSecret('test@example.com'), null, 2))\"",
    "invoices:cleanup": "node -e \"const InvoiceService = require('./backend/src/services/InvoiceService.js'); InvoiceService.deleteOldInvoices(30).then(() => process.exit(0))\"",
    "invoices:stats": "node -e \"const InvoiceService = require('./backend/src/services/InvoiceService.js'); console.log(JSON.stringify(InvoiceService.getStats(), null, 2))\"",
    "crypto:generate-key": "node -e \"const crypto = require('crypto'); console.log('Chave 256-bit (hex):', crypto.randomBytes(32).toString('hex'))\"",
    "crypto:audit": "node -e \"const [REDACTED_TOKEN] = require('./backend/src/services/[REDACTED_TOKEN].js'); console.log([REDACTED_TOKEN])\"",
    "migration:chat": "node src/database/migrations/[REDACTED_TOKEN].js",
    "db:report": "node -e \"const [REDACTED_TOKEN] = require('./backend/src/services/[REDACTED_TOKEN].js'); console.log(JSON.stringify([REDACTED_TOKEN].getQueryReport(), null, 2))\"",
    "db:slow-queries": "node -e \"const [REDACTED_TOKEN] = require('./backend/src/services/[REDACTED_TOKEN].js'); [REDACTED_TOKEN].detectSlowQueries(null, 100).then(q => console.log(JSON.stringify(q, null, 2))).then(() => process.exit(0))\"",
    "db:indices": "node -e \"const [REDACTED_TOKEN] = require('./backend/src/services/[REDACTED_TOKEN].js'); console.log(JSON.stringify([REDACTED_TOKEN].suggestIndices(), null, 2))\"",
    "cdn:report": "node -e \"const [REDACTED_TOKEN] = require('./backend/src/services/[REDACTED_TOKEN].js'); console.log(JSON.stringify([REDACTED_TOKEN].[REDACTED_TOKEN](), null, 2))\"",
    "cdn:savings": "node -e \"const [REDACTED_TOKEN] = require('./backend/src/services/[REDACTED_TOKEN].js'); console.log(JSON.stringify([REDACTED_TOKEN].[REDACTED_TOKEN](), null, 2))\""
  },
  "dependencies": {
    "@sentry/node": "^7.84.0",
    "@types/express": "^5.0.6",
    "axios": "^1.13.5",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csurf": "^1.2.2",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^12.7.0",
    "googleapis": "^118.0.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "next": "^16.1.6",
    "node-cron": "^3.0.2",
    "nodemailer": "^8.0.1",
    "openai": "^6.17.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.8.0",
    "prom-client": "^15.0.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.5",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.0.2",
    "stripe": "^11.18.0",
    "swagger-jsdoc": "^1.2.1",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.12.1",
    "web-push": "^3.5.0",
    "winston": "^3.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.29.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.1",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
