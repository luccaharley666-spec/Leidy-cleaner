
# ===============================
# EXEMPLO DE VARIÁVEIS DE AMBIENTE
# Copie para .env ou .env.production e preencha os valores reais
# ===============================

# Ambiente
NODE_ENV=production
PORT=3001
BASE_URL=https://seu-dominio.com

# Banco de Dados (Postgres recomendado)
DATABASE_URL=postgres://postgres:postgres@postgres:5432/leidy
# DATABASE_URL=sqlite:./backend_data/database.sqlite
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=leidy

# JWT (Autenticação)
JWT_SECRET=preencha_com_um_segredo_forte
JWT_EXPIRATION_MS=86400000
JWT_EXPIRES_IN=7d

# Frontend
NEXT_PUBLIC_API_URL=https://seu-dominio.com/api

# Stripe (Pagamentos)
STRIPE_SECRET_KEY=preencha_com_sua_chave_stripe

# MercadoPago (Pagamentos)
MERCADOPAGO_TOKEN=preencha_com_token_mercadopago

# Webhook PIX
WEBHOOK_SECRET_PIX=preencha_com_valor_seguro

# Redis
REDIS_URL=redis://127.0.0.1:6379
USE_BULL=true

# SMTP (E-mail)
SMTP_HOST=smtp.seudominio.com
SMTP_PORT=587
SMTP_USER=usuario@seudominio.com
SMTP_PASS=senha_segura

# NGINX / Domínio
DOMAIN=seu-dominio.com

# Outras integrações (Twilio, OAuth, etc.)
TWILIO_ACCOUNT_SID=ACxxxx
TWILIO_AUTH_TOKEN=xxxx
TWILIO_FROM=+15556667777

# Debug/Monitoramento
SENTRY_DSN=preencha_se_usar_sentry
NEXT_PUBLIC_DEBUG=false
LOG_LEVEL=info

