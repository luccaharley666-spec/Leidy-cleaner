# Exemplo de variáveis de ambiente para produção
# Copie para `.env.production` e substitua pelos valores reais

NODE_ENV=production
PORT=3001

# Banco (opções: usar POSTGRES em produção é recomendado)
# Para Postgres (recomendado):
DATABASE_URL=postgres://postgres:postgres@postgres:5432/leidy

# Se quiser manter SQLite (não recomendado para alta concorrência):
# DATABASE_URL=sqlite:./backend_data/database.sqlite

# JWT
JWT_SECRET=[REDACTED_TOKEN]
JWT_EXPIRATION_MS=86400000

# Frontend
NEXT_PUBLIC_API_URL=https://seu-dominio.com/api

# Postgres init (apenas se usar postgres via docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=leidy

# NGINX
DOMAIN=seu-dominio.com
# ========== SERVER ==========
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# ========== DATABASE ==========
DATABASE_PATH=./backend_data/database.db
DATABASE_URL=sqlite:./backend_data/database.db

# ========== JWT AUTHENTICATION ==========
JWT_SECRET=[REDACTED_TOKEN]
JWT_EXPIRES_IN=7d

# ========== STRIPE PAYMENTS ==========
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
[REDACTED_TOKEN]=[REDACTED_TOKEN]

# Subscription Price IDs (from Stripe Dashboard)
[REDACTED_TOKEN]=price_xxx_bronze
[REDACTED_TOKEN]=price_xxx_silver
[REDACTED_TOKEN]=price_xxx_gold

# ========== EMAIL SERVICE (Nodemailer) ==========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@myservice.com

# ========== WEB PUSH NOTIFICATIONS ==========
VAPID_PUBLIC_KEY=[REDACTED_TOKEN]
VAPID_PRIVATE_KEY=[REDACTED_TOKEN]
VAPID_SUBJECT=mailto:your-email@example.com

# ========== GOOGLE MAPS API ==========
GOOGLE_MAPS_API_KEY=AIza...xxx

# ========== OAUTH 2.0 PROVIDERS ==========
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
[REDACTED_TOKEN]=xxx
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

GITHUB_CLIENT_ID=xxx
[REDACTED_TOKEN]=xxx
GITHUB_REDIRECT_URI=http://localhost:3001/auth/github/callback

# ========== EXTERNAL SERVICES ==========
# Sentry (Error Tracking)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# SendGrid (Email API)
SENDGRID_API_KEY=SG.xxx

# Firebase Cloud Messaging (Push Notifications)
FCM_API_KEY=xxx

# ========== PIX (Brazilian Payment) ==========
PIX_API_KEY=xxx
PIX_API_SECRET=xxx
PIX_KEY=limpezapro@pix.com
PIX_BANK_API_URL=

# ========== TWILIO (Notifications) ==========
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ========== FEATURE FLAGS ==========
[REDACTED_TOKEN]=true
[REDACTED_TOKEN]=true
[REDACTED_TOKEN]=true
ENABLE_GEOLOCATION=true
[REDACTED_TOKEN]=true
ENABLE_BLOG=true
[REDACTED_TOKEN]=true
ENABLE_EMAIL_QUEUE=true

# ========== SECURITY ==========
CORS_ORIGIN=http://localhost:3000
[REDACTED_TOKEN]=15000
[REDACTED_TOKEN]=100

# ========== LOGGING ==========
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ========== ADMIN PANEL ==========
ADMIN_EMAIL=admin@example.com
[REDACTED_TOKEN]=ChangeMe123!

