# Exemplo de variáveis de ambiente para desenvolvimento/testes

# Server
PORT=3000
NODE_ENV=development

# Database (Postgres), substitua conforme necessário
DATABASE_URL=postgres://user:password@localhost:5432/leidy_cleaner_db

# Test DB (opcional - usado em CI/local sem Postgres)
TEST_DATABASE_URL=sqlite:./tmp/test.db

# JWT
JWT_ACCESS_SECRET=change_this_access_secret
JWT_REFRESH_SECRET=change_this_refresh_secret
# Durations em milissegundos
JWT_ACCESS_EXPIRES_IN_MS=900000        # 15 minutos
JWT_REFRESH_MAX_AGE_MS=1209600000      # 14 dias

# Cookies
COOKIE_SECURE=false                    # true em produção (HTTPS)
COOKIE_SAMESITE=Lax                    # Lax | Strict | None
COOKIE_DOMAIN=localhost

# Frontend URL (para CORS e redirecionamentos)
FRONTEND_URL=http://localhost:3000

# Outros (SMTP, Stripe, etc.) - defina conforme necessário
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
# STRIPE_SECRET=
